<%- include("../partials/header") %>

<div class="container">
	<div class="row justify-content-around">
		<div class="col-sm-10 col-md-8 col-lg-6 m-5">
			<div class="card p-3">
				<h1>
					Edit <%= campground.name %>
				</h1>
				<form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST" class="mt-5">
					<div class="form-group">
						<input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
					</div>
					<div class="form-group">
						<textarea class="form-control" name="campground[description]" placeholder="Campground Description" rows="3"><%= campground.description %></textarea>
					</div>
					<button type="submit" class="btn btn-block btn-primary">Submit</button>
				</form>
			</div>
		</div>	
	</div>
</div>

<%- include("../partials/footer") %>