<%- include("partials/header") %>

<div class="container">
	<div class="row justify-content-around">
		<div class="col-sm-10 col-md-8 col-lg-6 m-5">
			<h1>
				Create New Campground
			</h1>
			<form action="/campgrounds" method="POST" class="mt-5">
				<div class="form-group">
					<input type="text" class="form-control" name="name" placeholder="Campground Name">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="image" placeholder="Campground Image">
				</div>
				<div class="form-group">
    				<textarea class="form-control" name="description" placeholder="Campground Description" rows="3"></textarea>
				</div>
				<button type="submit" class="btn btn-block btn-primary">Submit</button>
			</form>
		</div>	
	</div>
</div>

<%- include("partials/footer") %>